# Copy to .env and update secrets before running docker compose
QAZNA_POSTGRES_PASSWORD=change-me
QAZNA_GRAFANA_ADMIN_PASSWORD=change-me
# Optional: specify allowed origins for CORS (comma-separated)
QAZNA_ALLOWED_ORIGINS=http://localhost:8080,http://localhost:3000
# Optional: remote ledger gRPC endpoint (use when Rust server runs separately)
QAZNA_LEDGER_GRPC_ADDR=
# Optional: enable demo stream events
QAZNA_STREAM_DEMO=1
