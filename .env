# Copy to .env and update secrets before running docker compose
QAZNA_POSTGRES_PASSWORD=your-secure-postgres-password
QAZNA_GRAFANA_ADMIN_PASSWORD=your-secure-grafana-password
# Optional: specify allowed origins for CORS (comma-separated)
QAZNA_ALLOWED_ORIGINS=http://localhost:8080,http://localhost:3000
# Required: PEM-encoded signing key pair for JWT (supply via environment exports before `docker compose up`)
QAZNA_AUTH_PRIVATE_KEY=
QAZNA_AUTH_PUBLIC_KEY=
# Optional: key ID and issuer embedded into JWTs
QAZNA_AUTH_KEY_ID=local-dev
QAZNA_AUTH_ISSUER=https://dev.qazna.local
# Optional: override default lifetimes
QAZNA_AUTH_ACCESS_TTL=15m
QAZNA_AUTH_REFRESH_TTL=720h
# Optional: remote ledger gRPC endpoint (use when Rust server runs separately)
QAZNA_LEDGER_GRPC_ADDR=
# Optional: enable demo stream events
QAZNA_STREAM_DEMO=1
