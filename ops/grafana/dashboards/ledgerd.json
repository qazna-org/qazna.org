{
  "uid": "ledgerd-core",
  "title": "Ledgerd Core",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "editable": true,
  "style": "dark",
  "time": { "from": "now-6h", "to": "now" },
  "refresh": "10s",
  "panels": [
    {
      "type": "stat",
      "title": "Total accounts",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "max(ledgerd_accounts)",
          "legendFormat": "accounts",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "orientation": "auto",
        "textMode": "value"
      }
    },
    {
      "type": "timeseries",
      "title": "Accounts over time",
      "gridPos": { "x": 6, "y": 0, "w": 18, "h": 8 },
      "targets": [
        {
          "expr": "ledgerd_accounts",
          "legendFormat": "accounts",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "color": { "mode": "palette-classic" }
        },
        "overrides": []
      },
      "options": {
        "legend": { "showLegend": false },
        "tooltip": { "mode": "single" }
      }
    },
    {
      "type": "timeseries",
      "title": "Transfer throughput (tx/s)",
      "gridPos": { "x": 0, "y": 8, "w": 24, "h": 8 },
      "targets": [
        {
          "expr": "sum by (currency) (rate(ledgerd_transfers_total[5m]))",
          "legendFormat": "{{currency}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "req/s",
          "color": { "mode": "palette-classic" }
        },
        "overrides": []
      },
      "options": {
        "legend": { "showLegend": true },
        "tooltip": { "mode": "multi" }
      }
    }
  ],
  "templating": { "list": [] }
}
